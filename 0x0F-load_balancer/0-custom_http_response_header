#!/usr/bin/env bash
# Purpose: Install and configure Nginx to add a custom header to HTTP responses.

if ! command -v nginx &> /dev/null; then
    sudo apt-get update
    sudo apt-get install -y nginx
fi

if [ "$(hostname)" = "249200-web-01" ]; then
    SERVER_HOSTNAME="249200-web-01"
elif [ "$(hostname)" = "249200-web-02" ]; then
    SERVER_HOSTNAME="249200-web-02"
else
    SERVER_HOSTNAME="default-hostname"
fi

sudo tee /etc/nginx/sites-available/default > /dev/null <<EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html;

    server_name _;

    location / {
        try_files \$uri \$uri/ =404;
        add_header X-Served-By \$hostname;
    }
}
EOF

if [ ! -e /etc/nginx/sites-enabled/default ]; then
    sudo ln -s /etc/nginx/sites-available/default /etc/nginx/sites-enabled/
fi

sudo /etc/init.d/nginx restart
