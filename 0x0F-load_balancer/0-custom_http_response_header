#!/usr/bin/env bash
# This script configures Nginx and adds a custom HTTP response header on a new Ubuntu machine.

sudo apt-get update

if ! [ -x "$(command -v nginx)" ]; then
    sudo apt-get install -y nginx
fi

CUSTOM_HEADER="X-Served-By $(hostname)"

echo "server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name _;

    location / {
        add_header $CUSTOM_HEADER;
        root /var/www/html;
        index index.html;
    }
}" | sudo tee /etc/nginx/sites-available/custom-header

sudo ln -s /etc/nginx/sites-available/custom-header /etc/nginx/sites-enabled/

sudo rm /etc/nginx/sites-enabled/default

sudo nginx -t

sudo systemctl reload nginx
