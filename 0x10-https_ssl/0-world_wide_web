#!/usr/bin/env bash
# This script configures domain subdomains and displays DNS information.

# Function to display information about a subdomain
display_info() {
    sub_domain=$1
    domain=$2
    result=$3
    record_type=$(echo "$result" | awk '/ANSWER SECTION:/ {getline; print $4}')
    echo "The subdomain $sub_domain is a $record_type record and points to $result"
}

# Function to perform DNS lookup and extract relevant information
get_dns_info() {
    sub_domain=$1
    domain=$2
    result=$(dig "$sub_domain.$domain" +short)
    display_info "$sub_domain" "$domain" "$result"
}

# Main script
main() {
    domain=$1
    sub_domain=$2

    if [ -z "$sub_domain" ]; then
        # Display information for default subdomains
        get_dns_info "www" "$domain"
        get_dns_info "lb-01" "$domain"
        get_dns_info "web-01" "$domain"
        get_dns_info "web-02" "$domain"
    else
        # Display information for the specified subdomain
        get_dns_info "$sub_domain" "$domain"
    fi
}

# Check if domain argument is provided
if [ -z "$1" ]; then
    echo "Error: Domain argument is missing. Usage: $0 <domain> [subdomain]"
    exit 1
fi

# Call the main function
main "$1" "$2"
