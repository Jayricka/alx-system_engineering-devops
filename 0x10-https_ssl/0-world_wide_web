#!/usr/bin/env bash

# Check for the correct number of arguments
if [ "$#" -lt 1 ] || [ "$#" -gt 2 ]; then
    echo "Usage: $0 domain [subdomain]"
    exit 1
fi

domain="$1"
subdomain="$2"

# Function to display information about a subdomain
display_info() {
    local sub="$1"
    local record_type="$2"
    local destination="$3"
    echo "The subdomain $sub is a $record_type record and points to $destination"
}

# Function to query DNS and display information
query_dns() {
    local sub="$1"
    local result
    result=$(dig +short "$sub.$domain")
    if [ -n "$result" ]; then
        local ip
        ip=$(dig +short "$sub.$domain" | head -n1)
        display_info "$sub" "A" "$ip"
    else
        echo "No record found for $sub.$domain"
    fi
}

# Add subdomains and display information based on arguments provided
if [ -z "$subdomain" ]; then
    # Display information for default subdomains
    query_dns www
    query_dns lb-01
    query_dns web-01
    query_dns web-02
else
    # Display information for the specified subdomain
    query_dns "$subdomain"
fi
