#!/usr/bin/env bash
#bash redirection

sudo apt-get update
sudo apt-get install -y nginx

echo "Redirecting to https://www.youtube.com/watch?v=QH2-TGUlwu4" | sudo tee /var/www/html/redirect_me.html > /dev/null

sudo tee /etc/nginx/sites-available/default > /dev/null <<EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html redirect_me.html;

    server_name _;

    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }

    location / {
        try_files \$uri \$uri/ =404;
    }
}
EOF

sudo /etc/init.d/nginx restart

echo "Nginx has been configured for redirection. /redirect_me will now redirect to https://www.youtube.com/watch?v=QH2-TGUlwu4"
